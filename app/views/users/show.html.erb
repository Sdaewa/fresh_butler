
<div class="container">
  <div class="showbox">
    <div class="left-box">
    <h1><%= @user.first_name %> <%= @user.last_name %></h1>
    <p><strong>Email:</strong> <%= @user.email %></p>
    <p><strong>Bio:</strong> <%= @user.description%></p>
  <h2> Average Ratings:
  <% numreviews = @user.butler_reviews.count %>
                    <% if numreviews != 0 %>
                      <% sum = 0 %>
                      <% @user.butler_reviews.each do |review| %>
                        <% sum += review.rating %>
                      <% end %>
                      <% stars = sum / numreviews  %>
                      <% stars.times do %>
                        <i class="fas fa-star stars"></i>
                      <% end %>
                    <% end %>
  </div>
  </h2>
  <div class="right-box">
      <%= cl_image_tag @user.photo, height: 200, width: 400, crop: :fill, class: "avatar" %>
  </div>

  </div>
    <div class="align-buttons">
      <%= link_to users_path do %>
        <div class="btn btn-secondary">
          Back
        </div>
        <% end  %>
      <%= link_to new_user_booking_path(@user) do %>
        <div class="btn btn-primary">
          Book
        </div>
        <% end %>
      </div>
  </div>
<%= link_to "See reviews", user_reviews_path(@user) %>
</div>


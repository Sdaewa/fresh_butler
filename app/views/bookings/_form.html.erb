<div class="container">
<%= simple_form_for [@butler, @booking] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :start_date%>
  </div>
  <br>
  <div class="form-inputs">
    <%= f.input :end_date %>
  </div>
  <br>
  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

</div>
